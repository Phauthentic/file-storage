{
    "name": "phauthentic/file-storage",
    "description": "File Storage",
    "keywords": ["storage", "files", "file storage", "file system", "persistence", "media", "image processing", "agnostic"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Kr√§mer",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phauthentic/file-storage-factories": "dev-develop",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "instituteweb/composer-scripts": "^1.1",
        "phauthentic/file-storage-image-processor": "dev-master"
    },
    "suggest": {
        "phauthentic/file-storage-image-processor": "For image processing"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Phauthentic\\Infrastructure\\Storage\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Phauthentic\\Test\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php config/composer_post_install.php"
        ],
        "test": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpunit"
        ],
        "test-coverage": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpunit --coverage-text"
        ],
        "test-coverage-html": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpunit --coverage-html tmp/coverage/"
        ],
        "cscheck": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpcs src/ tests/ --standard=phpcs.xml -s"
        ],
        "csfix": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpcbf src/ tests/ --standard=phpcs.xml"
        ],
        "analyze": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "phpstan analyse src/"
        ],
        "phive": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "php config/composer_phive.php"
        ],
        "serve": [
            "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
            "php -S localhost:8081 -t public/"
        ],
        "stan": "phpstan analyse src/",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 vimeo/psalm:^3.0 && mv composer.backup composer.json"
    }
}
